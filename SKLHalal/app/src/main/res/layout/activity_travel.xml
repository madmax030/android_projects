<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.skru.businesscomputer56.sklhalal.activity.FoodActivity">

    <RelativeLayout
        android:id="@+id/idActionBar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/colorPrimary">

        <Button
            android:onClick="btnClickBack"
            android:id="@+id/idbtnBack"
            android:layout_margin="10dp"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/ic_back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="สถานที่ท่องเที่ยว"
            android:textStyle="bold"
            android:textSize="24sp"
            android:layout_toRightOf="@id/idbtnBack"
            android:layout_centerInParent="true"
            android:textColor="@color/colorWhite"
            android:layout_margin="15dp"/>



    </RelativeLayout>


    <ScrollView
        android:layout_below="@+id/idActionBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
