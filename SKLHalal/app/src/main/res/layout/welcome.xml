<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/bg_mj"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:background="@color/overlay_color"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView

                android:padding="8dp"
                android:id="@+id/imageView"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/idbtnHome"
                android:text="GET HOME"
                android:layout_gravity="center"
                android:background="@drawable/selector_round_rect_button_pink"
                android:layout_width="wrap_content"
                android:textColor="@color/colorWhite"
                android:padding="16dp"
                android:onClick="onClick"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/idSkip"
                android:textColor="@color/colorWhite"
                android:layout_gravity="center"
                android:onClick="onClick"
                android:text="Skip"
                android:padding="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textColor="@color/colorWhite"
                android:text="By continuing, you accept the Term of Use and Privacy Policy"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="16dp" />

            <TextView
                android:textColor="@color/colorWhite"
                android:text="Songkhla Halal"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="4dp" />


        </LinearLayout>
    </RelativeLayout>

</LinearLayout>